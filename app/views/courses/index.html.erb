<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Number</th>
      <th>Credit hours</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= form_tag(search_courses_url, method: "get") do %>
      <%= label_tag(:query, "Search by course name:") %>
      <%= text_field_tag :query, params[:query], data: { autocomplete: autocomplete_course_name_courses_path } %>
      <%= submit_tag("Search") %>
  <% end %>


  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.department %></td>
        <td><%= course.number %></td>
        <td><%= course.credit_hours %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %><br/>

